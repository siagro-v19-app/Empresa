<mvc:View controllerName="br.com.idxtecEmpresa.controller.Empresa"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns="sap.m"
xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<Panel headerText="Empresa">
						<VBox class="sapUiSmallMargin">
							<t:Table id="tableEmpresa"
								rows="{path: '/Empresas'}"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Interactive"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Empresas"/> 
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="RazaoSocial" sortProperty="RazaoSocial">
										<Label text="Razão Social"/>
										<t:template>
											<Text text="{RazaoSocial}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Cnpj" sortProperty="Cnpj">
										<Label text="CNPJ"/>
										<t:template>
											<Text text="{Cnpj}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="RegimeTributario" sortProperty="RegimeTributario">
										<Label text="Regime Tributário"/>
										<t:template>
											<Text text="{RegimeTributario}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</VBox>
					</Panel>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>